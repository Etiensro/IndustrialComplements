<Window x:Class="Inventory.ui.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory.ui"
        mc:Ignorable="d"
        Title="Inicio de sesión" 
		Height="155.25" 
		Width="225.75"
		ResizeMode="CanMinimize"
		SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="9,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108" Height="18" TextAlignment="Left"><Run Language="es-es" Text="Login"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" Height="12" FontSize="9"><Run Language="es-es" Text="Nombre de Usuario"/></TextBlock>
        <ComboBox Margin="10,50,16,71" Width="200" Height="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96" Height="12" FontSize="9"><Run Language="es-es" Text="Contraseña"/></TextBlock>
        <PasswordBox Width="200" Height="18" FontSize="9" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,82,0,0"/>
        <Button HorizontalAlignment="Left" Margin="14,111,0,0" VerticalAlignment="Top" Width="60" Height="18" FontSize="9">
            Conectar
        </Button>
        <Button HorizontalAlignment="Left" Margin="87,111,0,0" VerticalAlignment="Top" Width="60" Height="18" FontSize="9">
            Cancel
        </Button>
    </Grid>
</Window>
