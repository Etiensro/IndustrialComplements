<model:MyWindow x:Class="Inventory.ui.RequestsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:Inventory.model"
        mc:Ignorable="d"
        Title="Buscar" 
		Height="528" 
		Width="1015.5"
		ResizeMode="CanMinimize"
		SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid>
			<TextBlock HorizontalAlignment="Left" 
                       Margin="10,8,0,0" 
                       TextWrapping="Wrap" 
                       VerticalAlignment="Top" 
                       Width="108" 
                       Height="18" 
                       TextAlignment="Left"
                       Text="Buscar Producto" />
			<TextBlock HorizontalAlignment="Left" 
                       Margin="10,34,0,0" 
                       TextWrapping="Wrap"
                       VerticalAlignment="Top" 
                       Width="70"
                       Height="12" 
                       TextAlignment="Left" 
                       FontSize="9"
                       Text="Busqueda Rapida" />
			<TextBox HorizontalAlignment="Left" 
                     Margin="10,46,0,0" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top"
                     Width="990" 
                     Height="18" 
                     FontSize="9"/>
			<TextBlock HorizontalAlignment="Left" 
                       Margin="934,34,0,0" 
                       TextWrapping="Wrap" 
                       VerticalAlignment="Top" 
                       Width="42" 
                       Height="12" 
                       TextAlignment="Left"
                       FontSize="9"
                       Text="Recuento:" />
			<TextBlock HorizontalAlignment="Left" 
                       Margin="976,34,0,0" 
                       TextWrapping="Wrap" 
                       VerticalAlignment="Top"
                       Width="24" 
                       Height="12" 
                       TextAlignment="Left" 
                       FontSize="9"
                       Text="00.00" />
			<Button HorizontalAlignment="Left" 
                    Margin="976,5,0,0" 
                    VerticalAlignment="Top" 
                    Width="24" 
                    Height="24" 
                    FontSize="9"
                    Content="Actualizar" />
			<Button x:Name="BtnDropElement" 
			        HorizontalAlignment="Left" 
                    Margin="10,69,0,0" 
                    VerticalAlignment="Top" 
                    Width="60" 
                    Height="24" 
                    FontSize="9"
                    Content="Drop" />
			<Button x:Name="BtnMarkAsDelivered" 
			        HorizontalAlignment="Left" 
			        Margin="75,69,0,0" 
			        VerticalAlignment="Top" 
			        Width="60" 
			        Height="24" 
			        FontSize="9"
			        Content="Entregado" />
			<Button x:Name="BtnMarkAsNotDelivered" 
			        HorizontalAlignment="Left" 
			        Margin="140,69,0,0" 
			        VerticalAlignment="Top" 
			        Width="60" 
			        Height="24" 
			        FontSize="9"
			        Content="No Entregado" />
			<Button x:Name="BtnMarkAsReturned" 
			        HorizontalAlignment="Left" 
			        Margin="205,69,0,0" 
			        VerticalAlignment="Top" 
			        Width="60" 
			        Height="24" 
			        FontSize="9"
			        Content="Devuelto" />
			<DataGrid x:Name="DataGridRequests" 
			          Margin="10,98,10,33"/>
			<Button x:Name="BtnExit" 
			        HorizontalAlignment="Left" 
                    Margin="10,484,0,0" 
                    VerticalAlignment="Top"
                    Width="60"
                    Height="24"
                    FontSize="9"
                    Content="Salir"
                    Click="CloseWindow" />
		</Grid>
	</Grid>
</model:MyWindow>
